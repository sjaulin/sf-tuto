{% extends 'base.html.twig' %}

{% block body %}
	<div class="container mt-4">
		<h1>Modifier la figure</h1>
		{{ form_start(form) }}

		{{ form_errors(form)}}

		<div class="row">
			<div class="col">
				{{ form_row(form.name)}}
			</div>
			<div class="col">

				{{ form_widget(form) }}
			</div>
		</div>

		<div class="row">
			{% for picture in pictures %}
				<div class="col-2">
					<p><img src="{{ src_trick_base ~ picture.name }}" alt="" width="150"></p>
					<p><input name="delete_pictures[{{ picture.id }}]" type="checkbox">
						Supprimer</p>
				</div>
			{% else %}
				Pas de photo
			{% endfor %}
		</div>

		<button class="btn btn-primary">Enregistrer</button>
		{{ form_end(form) }}
	</div>
{% endblock %}
