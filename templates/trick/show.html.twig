{% extends "base.html.twig" %}

{% set picture = trick.pictures|first %}

{% block title %}
	{{trick.name}}
	-
	{{trick.category.name}}
{% endblock %}

{% block body %}
	<div class="container">
		<ol class="breadcrumb">
			<li class="breadcrumb-item">
				<a href="{{ path('home') }}">Accueil</a>
			</li>
			<li class="breadcrumb-item">
				<a href="{{ path('trick_list', {'slug' : trick.category.slug }) }}">{{ trick.category.name }}</a>
			</li>
			<li class="breadcrumb-item active" aria-current="page">{{ trick.name }}</li>
		</ol>


		<h1>{{trick.name}}
			{% if is_granted('ENTITY_EDIT', trick) %}
				<a href="{{ path('trick_edit', {'id' : trick.id }) }}" class="badge badge-secondary">
					<i class="fa fa-pen" aria-hidden="true"></i>
				</a>
			{% endif %}

			{% if is_granted('ENTITY_DELETE', trick) %}
				<a href="{{ path('trick_delete', {'id' : trick.id }) }}" class="badge badge-danger">
					<i class="fa fa-trash" aria-hidden="true"></i>
				</a>
			{% endif %}
		</h1>

		<div class="row">
			<div class="col-4">
				{% if picture is not empty %}
					<img src="{{ asset(src_trick_base ~ picture.name) }}" alt="Photo {{ trick.name }}"/>
				{% else %}
					<p>Pas d'image</p>
				{% endif %}
			</div>
			<div class="col">
				{% include "trick/_category_badge.html.twig" %}
				<p>{{trick.description}}</p>
			</div>
		</div>

		{% for picture in trick.pictures|slice(1) %}
			<img src="{{ asset(src_trick_base ~ picture.name) }}" alt="Photo {{ trick.name }}" width="150"/>
		{% endfor %}

		{{ form_start(form) }}
		{{ form_widget(form) }}

		<button class="btn btn-primary">Ajouter</button>
		{{ form_end(form) }}</div>
{% endblock %}
