{% extends "base.html.twig" %}

{% set picture = trick.pictures|first %}

{% block title %}
	{{trick.name}}
	-
	{{trick.category.name}}
{% endblock %}

{% block body %}
	<div class="container">
		<ol class="breadcrumb">
			<li class="breadcrumb-item">
				<a href="{{ path('home') }}">Accueil</a>
			</li>
			<li class="breadcrumb-item">
				<a href="{{ path('trick.list', {'slug' : trick.category.slug }) }}">{{ trick.category.name }}</a>
			</li>
			<li class="breadcrumb-item active" aria-current="page">{{ trick.name }}</li>
		</ol>


		<h1>{{trick.name}}</h1>

		<div class="row">
			<div class="col-4">
				<img src="{{ asset('uploads/' ~ picture.name) }}" alt="Photo {{ trick.name }}"/>
			</div>
			<div class="col">
				{% include "trick/_category_badge.html.twig" %}
				<p>{{trick.description}}</p>
			</div>
		</div>

		{% for picture in trick.pictures|slice(1) %}
			<img src="{{ asset('uploads/' ~ picture.name) }}" alt="Photo {{ trick.name }}" width="150"/>
		{% endfor %}

	</div>
{% endblock %}
